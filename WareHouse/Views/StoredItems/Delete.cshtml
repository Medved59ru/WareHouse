@model WareHouse.DataAccessLayer.Models.StoredItem

@{
    ViewData["Title"] = "Единица хранения";
}

<h3>Удалить @Model.Item.Name со склада @Model.Store.Name ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Store.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlacePosition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlacePosition)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="StoreList" asp-route-id="@Model.StoreId">К листу хранения на складе @Model.Store.Name </a>|
        <a asp-action="Index">К общему списку</a>
    </form>
</div>
